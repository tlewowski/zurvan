{
  "name": "zurvan",
  "version": "0.4.0",
  "keywords": ["testing",
    "timeouts",
    "time",
    "timers",
    "fake time",
    "timer mocks",
    "timer stubs",
    "timer management",
    "faking timers",
    "event loop management",
    "fake timers",
    "setImmediate",
    "setInterval",
    "setTimeout",
    "process.uptime",
    "Date",
    "process.hrtime"
  ],
  "description": "A library for faking timers in Node.js",
  "author": "Tomasz Lewowski",
  "repository" : { 
    "type" : "git", 
    "url" : "https://github.com/Lewerow/zurvan.git"
  },
  
  "devDependencies": {
    "mocha": "^3.0.0",
    "istanbul": "^0.4.0",
	"jshint": "~2.9.2",
    "grunt": "~1.0.1",
    "grunt-cli": "~1.2.0",
    "grunt-istanbul": "~0.7.0",
    "grunt-mocha-istanbul": "~5.0.1",
    "madge": "~0.5.3",
    "codeclimate-test-reporter": "0.4.0",
    "bluebird": "^3.0.0"
  },
  
  "optionalDependencies": {
    "bluebird": "^3.0.0"
  },
  
  "bugs": "https://github.com/Lewerow/zurvan/issues",
  "engines": {"node": ">=0.12.0"},
  "license": "MIT",
  "scripts": {
    "mocha": "mocha --recursive tests examples",
    "test": "grunt",
    "coverage": "grunt mocha_istanbul",
    "madge": "madge -c . -x node_modules",
	"jshint": "jshint --exclude node_modules,coverage .",
    "ci": "npm run-script madge && npm run-script mocha && grunt mocha_istanbul"
  },
  
  "main": "zurvan.js"
}
